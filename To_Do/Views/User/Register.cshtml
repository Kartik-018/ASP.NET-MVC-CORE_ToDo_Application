@{
    Layout = "~/Views/Shared/homeLayout.cshtml";
}

<form method="post" id="form1" runat="server" style="padding-top:50px;">
    <div class="container pt-lg-5">
        <div class="row">
            <div class="col-4 mx-auto">
                <div class="card">
                    <div class="card-body" style="background-color:#eeeff0">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <i class="fa fa-user-circle fa-7x" aria-hidden="true"></i>
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <center>
                                    <h4>User Signup</h4>
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <hr />
                                <p>@ViewBag.Message</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input type="text" class="form-control" runat="server" name="username"
                                           placeholder="Username" />
                                </div>
                                <div class="form-group">
                                    <label>Email Address</label>
                                    <input type="text" class="form-control" runat="server" name="email"
                                           placeholder="Email Address" />
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control" runat="server" name="password"
                                           placeholder="Password"/>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control" runat="server" name="password1"
                                           placeholder="Confirm Password"/>
                                    <br />
                                </div>
                                <div class="form-group">
                                    <button ID="Signup"
                                            class="form-control btn btn-primary btn-block btn-lg" runat="server"
                                            Text="Signup" OnClick="Register">
                                        Sign Up
                                    </button>
                                </div>
                                <br />
                                <div class="form-group">
                                    <center>
                                        <h6 class="pt-2">
                                            Already have account? Login <a asp-action="Login">here</a>
                                        </h6>
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>